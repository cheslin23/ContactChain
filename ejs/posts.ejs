<head>
  <title>Posts</title>
  <link rel="shortcut icon" type="image/jpg" href="/static/favicon.ico" />
  <style>
    body {
      background: #96ff8c;
    }
    p {
      color: black;
      font-size: 15px;
    }
    h1, h2, h3, h4, h5, h6 {
      color: rgb(0, 0, 0);
    }
    hr {
      
      padding: 10px;
      background-color: black;
    }
    article {
      border-radius: 15px; background-color: rgb(255, 217, 0);
    border: 5px solid black;
    }
  </style>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
  <center>
    <h1>Posts</h1>
    <h2>You are currently logged in as <%= user %></h2>
    <br>
    <br>
    <% if(typeof msg !=='undefined' ) { %>
      <h2 style="color: black">
          <%= msg %>
      </h2>
      <% } %>
      <br>
    </center>
    <a href="/post/create">
      <button
          style="color: black; font-weight: 1000; box-shadow: 0px 0px 15px 0px #ff0000; border-radius: 7px; stroke-width: 0px; padding: 20px 50px; background-color: rgb(0, 225, 255);">Create Post</button>
  </a>
  <a href="/post/report">
    <button
        style="color: rgb(238, 255, 0); font-weight: 1000; box-shadow: 0px 0px 15px 0px #ff0000; box-shadow: 0px 0px 30px 0px #eeff00; border-radius: 7px; stroke-width: 0px; padding: 20px 50px; background-color: rgb(255, 0, 0); float: right;">Report post</button>
</a>
<br>
<br>
<hr>
<center>

<h1>Read the posts</h1>
<br>
<% for (let i = 0; i < posts.length; i++) { %>
  <article>
    <h2><%= posts[i].title %></h2>
    
    
    <hr style="padding: 1px">
    <br>
    <article style="border-radius: 7px; border-color: rgb(255, 255, 255);">
      <p><%= posts[i].body %></p>
    </article>
    
    <p style="float: left; margin-left: 10px;">Post created by: <%= posts[i].author %></p>
    <p style="float: right; margin-left: 10px;">Post report id: <%= posts[i].postid %></p>
    <br>
    <br>
    <br>
  </article>
  <br>
  <br>
<% } %>
<br>
        <br>
        <hr>
        <h4 style="color: #000000;">Exit here</h4>
        <a href="/">
            <button style="color: black; font-weight: bold; box-shadow: 0px 0px 15px 0px #000000; border-radius: 7px; stroke-width: 0px; padding: 20px 50px; background-color: grey;">Back</button>
        </a>
</center>
</body>